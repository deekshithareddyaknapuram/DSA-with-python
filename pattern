n=int(input())
for i in range(n):
    nums=1
    # print(" "*(n-i),end="")
        # print(' 'end='')
    for k in range(i+1):
        print(nums,end=" ")
        nums=nums*(i-k)//(k+i)
        # nums=nums%(n+1)
        # print(nums,end='')
    print()
